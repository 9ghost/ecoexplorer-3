<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Atividades</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1>Atividades para o Destino <%= destination?.name%></h1>
    <a href="/activities/new/<%= destination.id %>" class="btn btn-primary mb-3">Adicionar Atividade</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% activities.forEach(function(activity) { %>
          <tr>
            <td><%= activity.name %></td>
            <td>
              <a href="/activities/edit/<%= activity.id %>/<%= destinationId %>" class="btn btn-warning">Editar</a>
              <a href="/activities/delete/<%= activity.id %>/<%= destinationId %>" class="btn btn-danger">Excluir</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
